<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_container"
    android:layout_marginRight="10dp"
    android:layout_width="180dp"
    android:layout_height="260dp">

    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_feature_component_product"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_name_component_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_feature_component_product"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="18sp"
            android:text="Hello My World"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_component_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_component_product"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:text="Trạng thái"
            android:textSize="14sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>